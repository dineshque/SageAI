# Sage AI Backend Environment Variables

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-for-frontend-authentication

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sageai
# For development with SQLite:
# DATABASE_URL=sqlite:///./sageai.db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-gemini-api-key
ANTHROPIC_API_KEY=your-anthropic-claude-api-key

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:9002,https://your-frontend-domain.com

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Background Tasks (if using Celery)
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=./uploads

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Monitoring
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30